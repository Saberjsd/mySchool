
    <%include header.ejs%>

    <!--sidebar start-->
    <%include sidebar.ejs%>
    <!--sidebar end-->
    <style>
        .mb span{
            color: red;
            padding-left: 30%;
        }
    </style>
      <!--main content start-->
      <section id="main-content">
          <section class="wrapper">
          	<h3><i class="fa fa-angle-right"></i> 栏目添加</h3>
          	
          	<!-- BASIC FORM ELELEMNTS -->
          	<div class="row mt">
          		<div class="col-lg-12">
                  <div class="form-panel">
                  	  <h4 class="mb"><i class="fa fa-th-large"></i> 一级栏目添加</h4>
                      <form action="/cateAdd" class="form-horizontal style-form" method="post">

                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">ID:</label>
                              <div class="col-sm-8">
                                  <input name="cid" type="text" class="form-control" placeholder="自增长,可以省略">
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="col-sm-2 col-sm-2 control-label">名称:</label>
                              <div class="col-sm-8">
                                  <input name="cname" type="text" class="form-control">
                              </div>
                          </div>
                          <div class="row">
                              <div class="col-sm-3"></div>
                              <button type="reset" class="btn btn-warning col-sm-2">重置</button>
                              <div class="col-sm-2"></div>
                              <button type="submit" class="btn btn-success col-sm-2">添加</button>
                              <div class="col-sm-3"></div>
                          </div>

                      </form>
                  </div>
          		</div><!-- col-lg-12-->      	
          	</div><!-- /row -->

              <div class="row mt">
                  <div class="col-lg-12">
                      <div class="form-panel">
                          <h4 class="mb"><i class="fa fa-th-list"></i> 二级栏目添加
                              <span><%if(error!='')%><%=error%></span>
                          </h4>
                          <form action="/cateAdd" class="form-horizontal style-form" method="post">

                              <div class="form-group">
                                  <label class="col-sm-2 col-sm-2 control-label">父栏目:</label>
                                  <select name="pid" class="form-control col-sm-6" style="width: 62%;margin-left: 15px">
                                      <% cateMenu.forEach(function(item){%>
                                      <option value="<%=item.cid%>"><%=item.cid%>--<%=item.catename%></option>
                                      <%})%>
                                  </select>
                                  <!--<div class="col-sm-8">-->
                                      <!--<input name="pid" type="text" class="form-control">-->
                                  <!--</div>-->
                              </div>
                              <div class="form-group row">
                                  <label class="col-sm-2 col-sm-2 control-label">ID:</label>
                                  <div class="col-sm-8">
                                      <input name="cid" type="text" class="form-control" placeholder="自增长,可以省略">
                                  </div>
                              </div>
                                <!--级别,二级为2-->
                                <input name="level" type="hidden" value="2">
                              <div class="form-group">
                                  <label class="col-sm-2 col-sm-2 control-label">名称:</label>
                                  <div class="col-sm-8">
                                      <input name="cname" type="text" class="form-control">
                                  </div>
                              </div>

                              <div class="row">
                                  <div class="col-sm-3"></div>
                                  <button type="reset" class="btn btn-warning col-sm-2">重置</button>
                                  <div class="col-sm-2"></div>
                                  <button type="submit" class="btn btn-success col-sm-2">添加</button>
                                  <div class="col-sm-3"></div>
                              </div>

                          </form>
                      </div>
                  </div><!-- col-lg-12-->
              </div><!-- /row -->


          	
          	
		</section><! --/wrapper -->
      </section><!-- /MAIN CONTENT -->

      <!--main content end-->
      <!--footer start-->
      <%include footer.ejs%>
      <!--footer end-->
  </section>

